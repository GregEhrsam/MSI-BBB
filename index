        // Simple script to animate progress bars on load
        document.addEventListener('DOMContentLoaded', () => {
            const progressBars = document.querySelectorAll('.progress-bar');
            progressBars.forEach(bar => {
                const width = bar.style.width; // Get the initial width set in HTML
                bar.style.width = '0%'; // Reset to 0 for animation
                setTimeout(() => {
                    bar.style.width = width; // Animate to the target width
                }, 100); // Small delay to ensure reflow
            });
        });
    </script>
